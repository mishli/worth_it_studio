---
layout: base.njk
---
<div class="page-blog">
    <header class="post-header post-{{ post.slug }}" 
    style="background-image: url('{{ post.featured_image.data.attributes.url }}')">
        <div class="container">
            <header class="content-section hero">
                <h1 class="post-title">{{ post.title }}</h1>
                <p class="post-desc h3">                    
                    {{ post.excerpt }}
                </p>
                <time datetime="{{ post.date }}">{{ post.date }}</time>
            </header>        
        </div>
    </header>
    <main class="container">
        <article class="content-section hero single">
            {{ post.content | safe }}
        </article>
    </main>
    <div class="post-related">
        <h3 class="h2 rev-title-inner title-bg blue full">פוסטים נוספים</h3>
        {% include 'posts-loop.njk' %} 
    </div>
</div>