<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ dir }}">
{%- set pageTitle %}{% if title %}{{ title }} | {% endif %}{{ meta.siteName }}{% endset -%}
{%- set pageDescription %}{% if description %}{{ description }}{% else %}{{ meta.siteDescription }}{% endif %}{% endset -%}
{%- set pageSocialImg %}{{ meta.url }}/previews/{% if title %}{{ title | slug }}{% else %}home{% endif %}.png{% endset -%}
<head>
    <!-- Generated from the 11ty Netlify Jumpstart: https://github.com/5t3ph/11ty-netlify-jumpstart -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content="eleventy" />
    <title>{{pageTitle}}</title>
    <meta name="description" content="{{pageDescription}}" />
    <link rel="icon" href="{{ '/favicon.png' | url }}" />
    <link href="{{ '/css/style.css' | url }}" rel="stylesheet" />
    <meta name="twitter:card" content="summary_large_image" /> {% if meta.twitterUsername %}
    <meta name="twitter:creator" content="@{{ meta.twitterUsername }}" /> {% endif %}
    <meta name="twitter:title" content="{{pageTitle}}" />
    <meta name="twitter:description" content="{{pageDescription}}" />
    <meta name="og:title" content="{{pageTitle}}" />
    <meta name="og:description" content="{{pageDescription}}" />
    <meta property="og:image" content="{{pageSocialImg}}" />
    <meta name="twitter:image" content="{{pageSocialImg}}" />
    <link rel="alternate" type="application/rss+xml" title="RSS Feed for {{ meta.siteName }}" href="/feed/" />

    <script src="{{ '/scripts/anime.min.js' | url }}" defer></script>
    <script src="{{ '/scripts/scrollMonitor.js' | url }}" defer></script>
    <script src="{{ '/scripts/revealFx.js' | url }}" defer></script>
    <script src="{{ '/scripts/main.js' | url }}" defer></script>
    <script>document.documentElement.className = 'js';</script>
 </head>
 <body>
    {{ content | safe }}
    <footer class="footer-container">
        <img src="/img/worth-it-logo-square.svg" class="logo" height="180" alt="{{ meta.siteName }}" />
        <div class="footer-container__contact-box">
            <a a href="tel:0545845515" class="contact-item">
                <span>054-584-5515</span>
                <img src="/img/icons/i-call.svg" alt="">
            </a>
            <a href="https://www.instagram.com/hadas.worth.it/" target="_blank" class="contact-item" target="_blank">
                <span>hadas.worth.it</span>
                <img src="/img/icons/i-instagram.svg" alt="">
            </a>
            <a a href="https://www.youtube.com/@worth.it.studio" target="_blank" class="contact-item">
                <span>worth.it.studio</span>
                <img src="/img/icons/i-youtube.svg" alt="">
            </a>
        </div>
    </footer>

    <!-- Contact Overlay -->
    <section class="form-overlay">
        <button class="close-form-overlay">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 6L6 18M6 6L18 18" stroke="#413C58" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </button>
        
        <form class="form-inner" action="https://mailthis.to/hadasw88@gmail.com" method="POST" encType="multipart/form-data">
            <h3 class="form-title">אני פה לכל שאלה!</h3>

            <div class="form-section">
                <label class="form-label">שם</label>
                <input class="form-input" type="text" name="name" required>
            </div>
            <div class="form-section">
                <label class="form-label">טלפון</label>
                <input class="form-input" type="phone" name="phone">
            </div>
            {# <div class="form-section">
                <label class="form-label">אימייל</label>
                <input class="form-input" type="email" name="email">
            </div> #}
            <div class="form-section">
                <label class="form-label">הודעה</label>
                <textarea class="form-input" type="text" name="message"></textarea>
            </div>
            <div class="form-section">
                <label class="form-label">איך הגעת אלי?</label>
                <select class="form-select">
                    <option>המלצה</option>
                    <option>רשתות חברתיות</option>
                    <option>חיפוש ברשת</option>
                </select>
            </div>
            <div class="form-section">
                <input type="hidden" name="_subject" value="Contact form submitted">
                <input type="hidden" name="_honeypot" value="">
                <input type="hidden" name="_confirmation" value="">
                <input type="submit" value="שליחה" class="form-input btn-form">
            </div>
        </form>
    </section>
</body>
</html>
